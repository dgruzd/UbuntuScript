#!/bin/sh

cd /tmp

if [ "$1" = "install" ]; then
  if [ "$2" = "" ]; then
    echo "install need parameter"
  else
    wget -Nq https://raw.github.com/nyaa/UbuntuScript/master/FirstInstall/$2.sh
    chmod +x $2.sh
    ./$2.sh
    rm $2.sh
  fi

elif  [ "$1" = "list" ]; then
    wget -Nq https://raw.github.com/nyaa/UbuntuScript/master/FirstInstall/list.txt
    echo "You can install:"
    cat list.txt
    rm list.txt
elif  [ "$1" = "search" ]; then
    wget -Nq https://raw.github.com/nyaa/UbuntuScript/master/FirstInstall/list.txt
    cat list.txt | grep $2
    rm list.txt
elif  [ "$1" = "help" ]; then
  echo "Usage:\napt-nyaa install SOME_APP\napt-nyaa list\napt-nyaa help"
else
  echo "No parametres found"
fi
